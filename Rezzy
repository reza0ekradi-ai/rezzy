<script>
let bgMusic = document.getElementById('bgMusic');
let musicPlaying = false;

function startExperience(){
    showPage('buy');
    playMusic();
}

function toggleMusic(){
    if(musicPlaying){
        bgMusic.pause();
        musicPlaying = false;
    } else {
        bgMusic.play();
        musicPlaying = true;
    }
}

function playMusic(){
    bgMusic.play().then(()=>{ musicPlaying = true; }).catch(()=>{});
}

function showPage(id){
    document.querySelectorAll('section').forEach(s=>s.classList.remove('active'));
    document.getElementById(id).classList.add('active');
    window.scrollTo(0,0);
}

let selectedUC = null;
document.querySelectorAll('.uc-item').forEach(item=>{
    item.addEventListener('click', ()=>{
        document.querySelectorAll('.uc-item').forEach(i=>i.classList.remove('selected'));
        item.classList.add('selected');
        selectedUC = item.dataset.amount + " UC (" + item.dataset.price + " ØªÙˆÙ…Ø§Ù†)";
    });
});

const form = document.getElementById('ucForm');
const trackingBox = document.getElementById('trackingBox');
const trackingCodeEl = document.getElementById('trackingCode');

form.addEventListener('submit', e=>{
    e.preventDefault();
    const name = document.getElementById('name').value.trim();
    const playerId = document.getElementById('playerId').value.trim();
    if(!name || !playerId){
        alert("Ù„Ø·ÙØ§Ù‹ Ù‡Ù…Ù‡ ÙÛŒÙ„Ø¯Ù‡Ø§ Ø±Ø§ Ù¾Ø± Ú©Ù†ÛŒØ¯.");
        return;
    }
    if(!selectedUC){
        alert("Ù„Ø·ÙØ§Ù‹ ØªØ¹Ø¯Ø§Ø¯ UC Ø±Ø§ Ø§Ù†ØªØ®Ø§Ø¨ Ú©Ù†ÛŒØ¯.");
        return;
    }

    const code = 'UC-' + Math.random().toString(36).substring(2,8).toUpperCase();
    trackingCodeEl.textContent = code;
    trackingBox.style.display = 'block';
    form.style.display = 'none';
    document.querySelector('.uc-options').style.display = 'none';
});
</script>

